				center
					h1.indexHead3 <span style='font-size:30px;'>Development you can depend on.<span style='color:#43b04d;'> </span></span>
				div.pageHeading
				
				div.webTabs
					center
						button#nav-toggle1.nav-toggle(href='#collapse1')
							p#web1(style='font-size:17px;color:green;') DESIGNS
						button#nav-toggle2.nav-toggle(href='#collapse2')
							p#web2(style='font-size:17px;') 
						button#nav-toggle3.nav-toggle(href='#collapse3')
							p#web3(style='font-size:17px;') OUR TECHNOLOGIES
					
					#collapse1.collapse
						include includes/designs.jade
					#collapse2.collapse(style='display: none;')
					#collapse3.collapse(style='display: none;')
						include includes/technology.jade
						
			div.pageHeading	
		include includes/footer.jade
