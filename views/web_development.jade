			$('#nav-toggle1').click(function(){
			
				$('#collapse1').slideDown('fast');
				$('#collapse2').hide();
				$('#collapse3').hide();
				
				$('#web1').css('color', 'green')
				$('#web2').css('color', 'black')
				$('#web3').css('color', 'black')
