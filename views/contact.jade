doctype html
html
	head
		link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/style2.css')

	body.back1
		include includes/header.jade
		div.pageHeading
		div.container.pageHead2
			h1 Contact Us
		div.container.pagePage.pagePage3
			div.page-header
				h1 Get in touch now!
			p Interested in working with us? E-mail us now to get a quote/set up an appointment!
			br
			div		
				form(action='/contact', name='contactus', id='contactus', method='post')
					div#clientName
						label(for='name')
							h4 Name
						input(name='name', type='text', value='', id='name', placeholder="FirstName LastName")
					div#clientNumber
						h4 Contact Phone Number
						input(type="text", name="phone", placeholder="123-456-7890")
					div#clientEmail
						h4 Contact E-mail
						input(name='email', type='text', value='', id='email', placeholder="yourid@domain.ca")
					div#clientPlans
						h4 Describe your plans/summarize your project
						textarea(name='message', id='message', placeholder="Pull corner to lengthen")

					div#clientSubmit
						input(type='submit', value='Send')
			hr
			include includes/footer2
	script(src='/js/bootstrap.min.js')